<div class="dash-flex-container">

  <div class="dash-flex1">
    <%= render "rants/new_rant_form" %>
  </div>

  <div class="dash-flex2">
    <h1 class="text-center rant-label">Latest Rants</h1>
    <hr>


    <%= form_tag search_path, :method => "get" do %>
      <div><%= text_field_tag :search, params[:search] %>
        <%= submit_tag "SEARCH", :class => "search-button" %></div>
    <% end %>

    <%= render "user_search_results" %>

    <%= render "rant_search_results" %>
    
  </div>
</div>




