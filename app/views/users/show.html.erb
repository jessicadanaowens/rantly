<div class="dash-flex-container">

  <div class="dash-flex1">
    <%= render "layouts/new_rant_form" %>
  </div>

  <div class="dash-flex2">

    <h1 class="text-center rant-label"><%= @user.first_name %> <%= @user.last_name %></h1>

    <hr>

    <% if @interesting_ranters_ids.include?(@user.id) %>
      <h1><%= button_to "unfollow", user_interesting_ranter_path(current_user, @user.id), method: :delete %></h1>
    <% else %>
      <%= button_to "follow", user_interesting_ranters_path(current_user, @user.id), method: :post %>
    <% end %>

  <p><%= @user.bio %></p>

    <ul>

    <% Rant.sort_by_favorites(@user.rants).each do |rant| %>
      <li><%= rant.topic %></li>
      <li><%= rant.rant %></li>
      <% favorite_rant = FavoriteRant.where(rant_id: rant.id, user_id: current_user.id).first %>
      <% if !favorite_rant %>
        <%= button_to "Favorite", user_favorite_rants_path(current_user, rant.id), method: :post%>
      <% else %>
        <%= link_to "Unfavorite", user_favorite_rant_path(current_user, rant.id), :class => "delete", :method => :delete %>
      <% end %>
    <% end %>

    </ul>

  </div>
</div>