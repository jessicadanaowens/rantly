<!DOCTYPE html>
<html>
<head>
  <title>Rantly</title>

  <%= stylesheet_link_tag "http://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.1/normalize.min.css" %>
  <%= stylesheet_link_tag 'application', media: 'all'%>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>

  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <!-- this makes a design responsive-->

  <link href='http://fonts.googleapis.com/css?family=Nunito:700,300,400' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
</head>

<header>

  <% if current_user %>

    <section class="app-flex-container">

      <div class="flex1 logo-link">
        <%= link_to "Rant.ly", root_path %>
      </div>

      <div class="flex4 signed-in-links">
        <%= link_to "Dashboard", root_path %><span class="green"> |</span>
        <%= link_to "Following", user_interesting_ranters_path(current_user) %><span class="green"> |</span>
        <%= link_to "Favorites", user_favorite_rants_path(current_user) %><span class="green"> |</span>
        <%= link_to "Search", search_path %>
      </div>

      <div class="flex5">
        <div class="logout-button">
          <%= link_to "LOGOUT", signout_path %>
        </div>
      </div>

    </section>

  <% else %>

    <section class="app-flex-container">

      <div class="flex1 logo-link">
        <%= link_to "Rant.ly", root_path %>
      </div>

      <div class="flex2 login-link">
        <%= link_to "Login", signin_path %>
      </div>

      <div class="app-flex3">
        <div class="join-button">
          <%= link_to "Join", new_user_path %>
        </div>
      </div>

    </section>

  <% end %>

</header>

<body>
<%= yield %>
</body>

</html>
